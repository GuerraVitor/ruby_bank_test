<h1>Login</h1>

<% if flash[:alert] %>
  <div class="alert alert-theme-danger"><%= flash[:alert] %></div>
<% end %>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username, required: true, pattern: "\\d{5}", title: "Usuário deve ter 5 dígitos;" %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true, pattern: "\\d{4}", title: "Senha deve ter 4 dígitos" %>
  </div>
  <div>
    <%= form.submit "Login", class: "btn btn-theme-primary" %>
  </div>
<% end %>