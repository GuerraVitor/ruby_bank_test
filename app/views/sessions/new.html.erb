<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card p-4 shadow-lg">
      <h1 class="text-center text-primary">Login</h1>

      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>

      <%= form_with url: login_path, local: true, class: "mt-3" do |form| %>
        <div class="mb-3">
          <%= form.label :username, "Nº Conta", class: "form-label" %>
          <%= form.text_field :username, required: true, pattern: "\\d{5}", title: "Conta deve ter 5 dígitos", class: "form-control form-control-lg", placeholder: "Seu usuário (5 dígitos)" %>
        </div>
        <div class="mb-4">
          <%= form.label :password, "Senha", class: "form-label" %>
          <%= form.password_field :password, required: true, pattern: "\\d{4}", title: "Senha deve ter 4 dígitos", class: "form-control form-control-lg", placeholder: "Sua senha (4 dígitos)" %>
        </div>
        <%= form.submit "Login", class: "btn btn-primary w-100 btn-lg" %>
      <% end %>
    </div>
  </div>
</div>