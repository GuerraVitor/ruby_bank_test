<h1>Welcome, <%= @user.username %>!</h1>

<% if flash[:notice] %>
  <p style="color: green;"><%= flash[:notice] %></p>
<% elsif flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<h2>Your Current Balance: <%= @user.formatted_balance %></h2>

<h3>Menu Options:</h3>
<ul>
  <li><%= link_to "View Balance", dashboard_path %></li> <li><%= link_to "Statement", '#' %></li> <li><%= link_to "Withdrawal", '#' %></li> <li><%= link_to "Deposit", '#' %></li> <li><%= link_to "Transfer", '#' %></li> <% if @user.vip? %>
    <li><%= link_to "Request Manager Visit", '#' %></li> <% end %>
  <li><%= button_to "Switch User (Logout)", logout_path, method: :delete, data: { confirm: "Are you sure you want to log out?" } %></li>
</ul>