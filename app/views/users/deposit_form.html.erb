<h1>Depositar</h1>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: process_deposit_path, local: true do |form| %>
  <div>
    <%= form.label :amount, "Quantia (R$)" %>
    <%= form.number_field :amount, step: "0.01", min: "0.01", required: true, placeholder: "e.g., 100.50" %>
  </div>
  <div>
    <%= form.submit "Depositar" %>
  </div>
<% end %>

<%= link_to "Voltar para o Menu", dashboard_path %>