<h1 class="mb-4 text-theme-accent">Depositar</h1>

<% if flash[:alert] %>
  <div class="alert alert-theme-danger"><%= flash[:alert] %></div>
<% end %>

<%= form_with url: process_deposit_path, local: true, html: { class: "card p-4 shadow-sm" } do |form| %>
  <div class="mb-3">
    <%= form.label :amount, "Quantia (R$)", class: "form-label" %>
    <%= form.number_field :amount, step: "0.01", min: "0.01", required: true, placeholder: "ex. 100.00", class: "form-control" %>
  </div>
  <div>
    <%= form.submit "Depositar", class: "btn btn-theme-success w-100" %>
  </div>
<% end %>

<%= link_to "Voltar para o Menu", dashboard_path, class: "btn btn-link mt-3" %>