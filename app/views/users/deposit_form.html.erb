<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card p-4 shadow-lg">
      <h1 class="text-center text-primary">Depositar</h1>

      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>

      <%= form_with url: process_deposit_path, local: true, class: "mt-3" do |form| %>
        <div class="mb-3">
          <%= form.label :amount, "Quantia (R$)", class: "form-label" %>
          <%= form.number_field :amount, step: "0.01", min: "0.01", required: true, placeholder: "Ex: 100.00", class: "form-control form-control-lg" %>
        </div>
        <%= form.submit "Depositar", class: "btn btn-success w-100 btn-lg" %>
      <% end %>
      <%= link_to "Voltar para o Menu", dashboard_path, class: "btn btn-link mt-4 d-block text-center" %>
    </div>
  </div>
</div>