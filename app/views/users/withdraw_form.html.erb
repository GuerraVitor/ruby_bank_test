<h1>Sacar</h1>

<% if flash[:alert] %>
  <div class="alert alert-theme-danger"><%= flash[:alert] %></div>
<% end %>

<%= form_with url: process_withdraw_path, local: true do |form| %>
  <div>
    <%= form.label :amount, "Quantia (R$)" %>
    <%= form.number_field :amount, step: "0.01", min: "0.01", required: true, placeholder: "ex. 100.00" %>
  </div>
  <div>
    <%= form.submit "Sacar", class: "btn btn-theme-primary" %>
  </div>
<% end %>

<%= link_to "Voltar para o Menu", dashboard_path %>